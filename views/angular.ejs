<!DOCTYPE html>
<html ng-app="taskerApp">
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://fonts.googleapis.com/css?family=Oswald:700|Droid+Serif:400,700italic" rel="stylesheet" type="text/css" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript"
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type='text/javascript' src="/javascripts/angular-app.js"></script>
  </head>
  <body>

    <nav id="main-nav">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/backbone">Backbone.js</a></li>
        <li class="active"><a href="/angular">Angular.js</a></li>
      </ul>
      <h3>Tasker</h3>
    </nav>

    <section class="container">
      <h2>Create A Task</h2>
      <div id="divider"></div>
      <!-- angular TaskListCtrl -->
      <article ng-controller="TaskListCtrl">
          <form ng-submit="createTask(name, description)">
            <input class='form-control' type="text" ng-model="name" name="name" placeholder="...name"/>
            <input class='form-control' type="text" ng-model="description" name="description" placeholder="...description"/>
            <input class='btn btn-primary' type="submit" id="submit" value="Submit" />
          </form>
        <h2>My Tasks</h2>
        <div id="divider"></div>
        <ul>
          <li ng-repeat="task in tasks">
            <h4><span>{{task.name}}</span></h4>
            <p><strong>Description</strong> <em>{{task.description}}</em></p>
            <p><span data-task="{{task._id}}" ng-click="completeTask(task)"><strong>Done?</strong></span></p>
          </li>
        </ul>
      </article>

    <!-- end angular TaskListCtrl -->
    </section>


  </body>
</html>
